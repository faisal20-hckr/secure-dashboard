+<!doctype html>
+<html lang="en">
+<head>
+  <meta charset="utf-8">
+  <title>Login / Register</title>
+  <link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">
+</head>
+<body>
+<header class="topbar"><div class="brand">SDP Secure</div></header>
+<main class="auth">
+  <div class="card">
+    <h2>{{ 'Register' if register else 'Login' }}</h2>
+    {% if error %}<p class="err">{{ error }}</p>{% endif %}
+    <form method="post">
+      <label>Username</label><input name="username" required>
+      <label>Password</label><input name="password" type="password" required>
+      <button class="btn" type="submit">{{ 'Register' if register else 'Login' }}</button>
+    </form>
+    <p class="muted">
+      {% if register %}
+      Already have account? <a href="{{ url_for('login') }}">Login</a>
+      {% else %}
+      New user? <a href="{{ url_for('register') }}">Register</a>
+      {% endif %}
+    </p>
+  </div>
+</main>
+<footer class="footer">SDP Lab</footer>
+</body>
+</html>
